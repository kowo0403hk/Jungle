<tr>
  <td>
    <%= sale.id %>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <% if sale.finished? %> <%# calling the sale class method, which is from the model folder %>
    <span class="badge bg-danger">Finished</span>
    <% elsif sale.upcoming? %>
    <span class="badge bg-warning">Upcoming</span>
    <% else %>
    <span class="badge bg-success">Active</span>
    <% end %>
  </td>
  <td>
    <%= sale.percent_off %>
  </td>

</tr>